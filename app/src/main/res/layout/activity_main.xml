<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/idTTLCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="4.5"
            android:background="@color/white"
            android:hint="Tìm kiếm địa điểm"
            android:padding="5dp"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/idEdtCity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:importantForAutofill="no"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_search_24"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/_52786664_399113671695827_3253292207546850080_n"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="casual"
                android:paddingTop="25dp"
                android:text="Rain"
                android:textColor="#333333"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/air"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="casual"
                android:text="Light air"
                android:textColor="#999999"
                android:textSize="13sp"></TextView>
        </LinearLayout>


    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="casual"
        android:text="22°C"
        android:textColor="#111111"
        android:textSize="50dp"></TextView>

    <TextView
        android:id="@+id/feelTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="casual"
        android:text="Feels like 20°C"
        android:textColor="#999999"
        android:textSize="12dp"></TextView>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sideNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="casual"
            android:paddingTop="20dp"
            android:text="No sun within an hour"
            android:textColor="#111111"
            android:textSize="14dp"></TextView>
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/bottomlayout">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left"
                android:paddingTop="10dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/Wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:text="Wind: 0.5m/s"
                    android:textColor="#111111"
                    android:textSize="14dp"></TextView>

                <TextView
                    android:id="@+id/Humid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:text="Humidity: 82%"
                    android:textColor="#111111"
                    android:textSize="14dp"></TextView>

                <TextView
                    android:id="@+id/UV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UV index: 0.0"
                    android:textColor="#111111"
                    android:textSize="14dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/Pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Pressure: 1017hPa"
                    android:textColor="#111111"
                    android:textSize="14dp"></TextView>

                <TextView
                    android:id="@+id/Visibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Visibility: 10.0km"
                    android:textColor="#111111"
                    android:textSize="14dp"></TextView>

                <TextView
                    android:id="@+id/DevPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Dev point: 9°C"
                    android:textColor="#111111"
                    android:textSize="14dp"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>